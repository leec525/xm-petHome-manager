{"ast":null,"code":"import adopt from \"@/views/manager/Adopt.vue\";\nexport default {\n  name: 'Home',\n  data() {\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      notices: [],\n      animalData: []\n    };\n  },\n  created() {\n    this.$request.get('/notice/selectAll').then(res => {\n      this.notices = res.data || [];\n    });\n    this.loadAnimal();\n  },\n  methods: {\n    loadAnimal() {\n      this.$request.get('/animal/selectAll').then(res => {\n        if (res.code === '200') {\n          this.animalData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    adopt(animal) {\n      if (this.user.role === 'ADMIN') {\n        this.$message.warning('您的角色不支持该操作');\n        return;\n      }\n      let data = JSON.parse(JSON.stringify(animal));\n      data.status = '已领养';\n      this.$request.put('/animal/update', data).then(res => {\n        if (res.code === '200') {\n          this.loadAnimal();\n          //往领养记录那边同步一条信息过去\n          let adoptData = {\n            userId: this.user.id,\n            animalId: data.id\n          };\n          this.$request.post('/adopt/add', adoptData).then(res => {\n            if (res.code === '200') {\n              this.$message.success('领养成功，请善待它哦~');\n            } else {\n              this.$message.error(res.msg);\n            }\n          });\n        }\n      });\n    }\n  }\n};","map":{"version":3,"names":["adopt","name","data","user","JSON","parse","localStorage","getItem","notices","animalData","created","$request","get","then","res","loadAnimal","methods","code","$message","error","msg","animal","role","warning","stringify","status","put","adoptData","userId","id","animalId","post","success"],"sources":["src/views/manager/Home.vue"],"sourcesContent":["<template>\n  <div>\n    <div class=\"card\" style=\"padding: 15px\">\n      您好，{{ user?.name }}！欢迎使用本系统\n    </div>\n\n    <div style=\"display: flex; margin: 10px 0\">\n      <div style=\"width: 100%;\" class=\"card\">\n        <!--宠物卡片-->\n        <div style=\"margin-bottom: 20px; font-size: 20px; font-weight: bold; color: #817a70\">如果你喜欢我，就领养我吧</div>\n        <div>\n          <el-row>\n            <!--显示一行5张卡片-->\n            <el-col :span=\"5\" v-for=\"item in animalData\">\n              <div class=\"card\" style=\"background-color: #f8f4e8; text-align: center\">\n                <!--动态卡片渲染-->\n                <img :src=\"item.img\" alt=\"\" style=\"width: 80px; height: 80px; border-radius: 50%\">\n                <div style=\"font-weight: bold; color: #817a70; margin-top: 5px\">{{item.name}}（{{ item.type }}）</div>\n                <div style=\"color: #575353; font-size: 13px; margin-top: 5px\">性别：{{ item.sex }}， 年龄：{{ item.age }}，<span style=\"color: #7d3d0c\">{{ item.status }}</span></div>\n                <!--TODO:描述文字不一样多的话，可能会导致卡片高度不一样-->\n                <div style=\"margin-top: 15px; color: #4b4949; text-align: left\">{{ item.description }}</div>\n                <div>\n                  <el-button type=\"success\" size=\"mini\" style=\"margin-top: 20px\" :disabled=\"item.status === '已领养'\" @click=\"adopt(item)\">领养</el-button>\n                </div>\n              </div>\n            </el-col>\n          </el-row>\n        </div>\n        <div style=\"margin: 30px 0; font-size: 20px; font-weight: bold\">公告列表</div>\n        <div >\n          <el-timeline  reverse slot=\"reference\">\n            <el-timeline-item v-for=\"item in notices\" :key=\"item.id\" :timestamp=\"item.time\">\n              <el-popover\n                  placement=\"right\"\n                  width=\"200\"\n                  trigger=\"hover\"\n                  :content=\"item.content\">\n                <span slot=\"reference\">{{ item.title }}</span>\n              </el-popover>\n            </el-timeline-item>\n          </el-timeline>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport adopt from \"@/views/manager/Adopt.vue\";\n\nexport default {\n  name: 'Home',\n  data() {\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      notices: [],\n      animalData: [],\n    }\n  },\n  created() {\n    this.$request.get('/notice/selectAll').then(res => {\n      this.notices = res.data || []\n    })\n    this.loadAnimal()\n  },\n  methods:{\n    loadAnimal(){\n      this.$request.get('/animal/selectAll').then(res =>{\n        if(res.code === '200'){\n          this.animalData = res.data\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    adopt(animal){\n      if (this.user.role === 'ADMIN') {\n        this.$message.warning('您的角色不支持该操作')\n        return\n      }\n      let data = JSON.parse(JSON.stringify(animal))\n      data.status = '已领养'\n      this.$request.put('/animal/update', data).then(res =>{\n        if(res.code === '200'){\n          this.loadAnimal()\n          //往领养记录那边同步一条信息过去\n          let adoptData = {\n            userId: this.user.id,\n            animalId: data.id,\n          }\n          this.$request.post('/adopt/add', adoptData).then(res =>{\n            if(res.code === '200') {\n              this.$message.success('领养成功，请善待它哦~')\n            } else{\n              this.$message.error(res.msg)\n            }\n          })\n        }\n      })\n    }\n  }\n}\n</script>\n\n<style scoped>\n.el-col-5{\n  width: 20%;\n  max-width: 20%;\n  padding: 10px 10px;\n}\n</style>\n"],"mappings":"AAgDA,OAAAA,KAAA;AAEA;EACAC,IAAA;EACAC,KAAA;IACA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAC,OAAA;MACAC,UAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,QAAA,CAAAC,GAAA,sBAAAC,IAAA,CAAAC,GAAA;MACA,KAAAN,OAAA,GAAAM,GAAA,CAAAZ,IAAA;IACA;IACA,KAAAa,UAAA;EACA;EACAC,OAAA;IACAD,WAAA;MACA,KAAAJ,QAAA,CAAAC,GAAA,sBAAAC,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAG,IAAA;UACA,KAAAR,UAAA,GAAAK,GAAA,CAAAZ,IAAA;QACA;UACA,KAAAgB,QAAA,CAAAC,KAAA,CAAAL,GAAA,CAAAM,GAAA;QACA;MACA;IACA;IACApB,MAAAqB,MAAA;MACA,SAAAlB,IAAA,CAAAmB,IAAA;QACA,KAAAJ,QAAA,CAAAK,OAAA;QACA;MACA;MACA,IAAArB,IAAA,GAAAE,IAAA,CAAAC,KAAA,CAAAD,IAAA,CAAAoB,SAAA,CAAAH,MAAA;MACAnB,IAAA,CAAAuB,MAAA;MACA,KAAAd,QAAA,CAAAe,GAAA,mBAAAxB,IAAA,EAAAW,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAG,IAAA;UACA,KAAAF,UAAA;UACA;UACA,IAAAY,SAAA;YACAC,MAAA,OAAAzB,IAAA,CAAA0B,EAAA;YACAC,QAAA,EAAA5B,IAAA,CAAA2B;UACA;UACA,KAAAlB,QAAA,CAAAoB,IAAA,eAAAJ,SAAA,EAAAd,IAAA,CAAAC,GAAA;YACA,IAAAA,GAAA,CAAAG,IAAA;cACA,KAAAC,QAAA,CAAAc,OAAA;YACA;cACA,KAAAd,QAAA,CAAAC,KAAA,CAAAL,GAAA,CAAAM,GAAA;YACA;UACA;QACA;MACA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}